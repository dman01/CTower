<h1>Portfolios</h1>
<%=show_link_to_process%><br><br><%= show_link_to_new%>
<br>
<br>
<%if PortfolioProcess.any? && Portfolio.any?%>

<table border=1>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Process</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @portfolios.each do |portfolio| %>
  <tr>
    <td><%= portfolio.title %></td>
    <td><%= portfolio.description %></td>
    <td><%= display_process(portfolio) %></td>
    <td><%= link_to 'Show', portfolio %></td>
    <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
    <td><%= link_to 'Destroy', portfolio, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%end%>

